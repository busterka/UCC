<Page x:Class="UCC.View.PageAdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Панель администратора"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="{StaticResource PrimaryBrush}" Padding="20">
            <TextBlock Text="Единая Цифровая Картотека (ЕЦК)"
                       Foreground="White" 
                       FontFamily="{StaticResource ComfortaaFont}"
                       FontSize="22" FontWeight="Bold"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="30,20">
            <StackPanel>
                <TextBlock Text="Панель администратора"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="28" 
                           Margin="0,0,0,25"/>

                <TextBlock Text="Управление справочниками"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="18" 
                           Margin="0,0,0,15"/>

                <Button Content="Болезни" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnDiagnoses_Click"/>

                <Button Content="Лекарства" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnMedications_Click"/>

                <Button Content="Отделения" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnDepartments_Click"/>

                <Button Content="Роли сотрудников" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnRoles_Click"/>

                <TextBlock Text="Управление пользователями"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="18" 
                           Margin="0,25,0,15"/>

                <Button Content="Пациенты" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnPatients_Click"/>

                <Button Content="Сотрудники (Врачи/Админы)" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Name="BtnStaff" 
                        Click="BtnStaff_Click"/>

                <Button Content="Выход" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Background="#E53E3E"
                        Foreground="White"
                        Name="BTNlogout" 
                        Click="BTNlogout_Click"
                        Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>