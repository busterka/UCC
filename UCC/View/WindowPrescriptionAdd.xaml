<Window x:Class="UCC.View.WindowPrescriptionAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выдать рецепт" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новый рецепт" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="24" 
                   Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Пациент -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Пациент:" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <TextBlock x:Name="TxtPatientName" 
                           Style="{StaticResource TextStyle}"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Лекарство -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Лекарство:" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="CmbMedications" 
                          DisplayMemberPath="MedicationName"
                          SelectedValuePath="MedicationId"
                          Height="35"
                          FontFamily="{StaticResource ComfortaaFont}"
                          FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Дозировка и инструкции -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Дозировка и инструкции:" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="TxtInstructions" 
                         Style="{StaticResource CustomTextBox}"
                         AcceptsReturn="True" 
                         Height="80" 
                         TextWrapping="Wrap"
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Grid.Row="4">
            <Button Content="Отмена" 
                    Style="{StaticResource RoundedButton}"
                    Width="100" 
                    Height="45"
                    FontSize="15"
                    IsCancel="True" 
                    Margin="0,0,15,0"/>
            <Button Content="Создать рецепт" 
                    Style="{StaticResource RoundedButton}"
                    Width="140" 
                    Height="45"
                    FontSize="15"
                    Click="BtnCreate_Click"/>
        </StackPanel>
    </Grid>
</Window>