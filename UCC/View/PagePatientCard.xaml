<Page x:Class="UCC.View.PagePatientCard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Карточка пациента">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Карточка пациента" 
                   FontSize="20" FontWeight="Bold" 
                   Grid.Row="0" Margin="0,0,0,15"/>

        <!-- Основные данные пациента -->
        <Border Grid.Row="1" BorderBrush="#CBD5E0" BorderThickness="1" CornerRadius="5" Padding="15" Background="#F8FAFC">
            <StackPanel>
                <TextBlock x:Name="TxtFullName" Text="Иванов Иван Иванович" FontSize="16" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Дата рождения: " FontWeight="Bold"/>
                    <TextBlock x:Name="TxtBirthDate" Text="12.05.1980"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Полис ОМС: " FontWeight="Bold"/>
                    <TextBlock x:Name="TxtInsurance" Text="1234567890123456"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Участок: " FontWeight="Bold"/>
                    <TextBlock x:Name="TxtDistrict" Text="Участок №1 – г. Город"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Телефон: " FontWeight="Bold"/>
                    <TextBlock x:Name="TxtPhone" Text="+7 (999) 123-45-67"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Кнопки действий -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,15,0,15">
            <Button Content="Начать новый приём" Width="160" 
                    Background="#3182CE" Foreground="White"
                    Click="BtnStartVisit_Click" Margin="0,0,10,0"/>
            <Button Content="Обновить данные" Width="120" Click="BtnEditPatient_Click"/>
        </StackPanel>

        <!-- История болезней -->
        <GroupBox Header="История болезней (темы лечения)" Grid.Row="3">
            <DataGrid x:Name="DgEpisodes" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      Margin="0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate, StringFormat=d}" Width="100"/>
                    <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" Width="250"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Нижняя панель -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4" Margin="0,20,0,0">
            <Button Content="Назад" Width="80" Click="BtnBack_Click"/>
        </StackPanel>

    </Grid>
</Page>