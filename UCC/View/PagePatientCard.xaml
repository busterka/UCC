<Page x:Class="UCC.View.PagePatientCard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Карточка пациента"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Карточка пациента" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="24" 
                   Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Основные данные пациента -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="20">
            <StackPanel>
                <!-- Фото пациента с кнопкой -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Image x:Name="ImgProfile" 
                           Width="100" Height="100" 
                           Stretch="UniformToFill"
                           Source="/Images/default-avatar.png"/>
                    <Button Content="Изменить фото" 
                            Style="{StaticResource RoundedButton}"
                            Width="140" 
                            Height="40"
                            FontSize="14"
                            Margin="20,0,0,0"
                            Click="BtnChangePhoto_Click"/>
                </StackPanel>

                <TextBlock x:Name="TxtFullName" 
                           Style="{StaticResource HeaderStyle}"
                           FontSize="18" 
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Дата рождения: " 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="15" 
                               Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtBirthDate" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="15"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Полис ОМС: " 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="15" 
                               Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtInsurance" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="15"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Участок: " 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="15" 
                               Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtDistrict" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="15"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8">
                    <TextBlock Text="Телефон: " 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="15" 
                               Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtPhone" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="15"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Кнопки действий -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,20,0,20">
            <Button Content="Начать новый приём" 
                    Style="{StaticResource RoundedButton}"
                    Width="190" 
                    Height="45"
                    FontSize="15"
                    Click="BtnStartVisit_Click"/>
            <Button Content="Обновить данные" 
                    Style="{StaticResource RoundedButton}"
                    Width="160" 
                    Height="45"
                    FontSize="15"
                    Click="BtnEditPatient_Click"/>
        </StackPanel>

        <!-- История болезней -->
        <GroupBox Header="История болезней (темы лечения)" 
                  Grid.Row="3"
                  FontFamily="{StaticResource ComfortaaFont}"
                  Foreground="{StaticResource PrimaryBrush}"
                  FontSize="16"
                  Margin="0,0,0,15">
            <DataGrid x:Name="DgEpisodes" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      RowHeight="35"
                      FontFamily="{StaticResource ComfortaaFont}"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate, StringFormat=d}" Width="110"/>
                    <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" Width="280"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="110"/>
                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="180"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="8,6"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </GroupBox>

        <!-- Нижняя панель -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4">
            <Button Content="Назад" 
                    Style="{StaticResource RoundedButton}"
                    Width="100" 
                    Height="45"
                    FontSize="15"
                    Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>