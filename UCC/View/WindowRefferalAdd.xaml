<Window x:Class="UCC.View.WindowRefferalAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выдать направление" 
        Height="480" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Новое направление" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="24" 
                   Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Выбор пациента -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Пациент:" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="CmbPatients" 
                          DisplayMemberPath="FullName" 
                          SelectedValuePath="PatientId"
                          Height="35"
                          FontFamily="{StaticResource ComfortaaFont}"
                          FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Тип направления -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Тип направления:" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="CmbReferralType" 
                          Height="35"
                          FontFamily="{StaticResource ComfortaaFont}"
                          FontSize="14">
                    <ComboBoxItem Content="Анализы"/>
                    <ComboBoxItem Content="Рентген"/>
                    <ComboBoxItem Content="УЗИ"/>
                    <ComboBoxItem Content="КТ"/>
                    <ComboBoxItem Content="МРТ"/>
                    <ComboBoxItem Content="Консультация специалиста"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Цель / Комментарий -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Цель / Комментарий:" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="TxtPurpose" 
                         Style="{StaticResource CustomTextBox}"
                         AcceptsReturn="True" 
                         Height="80" 
                         TextWrapping="Wrap"
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Grid.Row="4">
            <Button Content="Отмена" 
                    Style="{StaticResource RoundedButton}"
                    Width="100" 
                    Height="45"
                    FontSize="15"
                    IsCancel="True" 
                    Margin="0,0,15,0"/>
            <Button Content="Создать направление" 
                    Style="{StaticResource RoundedButton}"
                    Width="180" 
                    Height="45"
                    FontSize="15"
                    Click="BtnCreate_Click"/>
        </StackPanel>
    </Grid>
</Window>