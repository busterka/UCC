<Page x:Class="UCC.View.PageProfileDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль сотрудника"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Профиль сотрудника" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="24" 
                   Grid.Row="0" Margin="0,0,0,25"/>

        <!-- Основные данные сотрудника -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="25">
            <StackPanel>
                <!-- Фото сотрудника с кнопкой -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image x:Name="ImgProfile" 
                           Width="100" Height="100" 
                           Stretch="UniformToFill"
                           Source="/Images/default-avatar.png"/>
                    <Button Content="Изменить фото" 
                            Style="{StaticResource RoundedButton}"
                            Width="120" 
                            Height="35"
                            FontSize="13"
                            Margin="15,0,0,0"
                            Click="BtnChangePhoto_Click"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="ФИО:" 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtFullName" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="16"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Email:" 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtEmail" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="16"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Роль:" 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtRole" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="16"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Кабинет:" 
                               Style="{StaticResource TextStyle}" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="TxtCabinet" 
                               Style="{StaticResource TextStyle}" 
                               FontSize="16"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Кнопка назад -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Grid.Row="2" 
                    Margin="0,30,0,0">
            <Button Content="Назад" 
                    Style="{StaticResource RoundedButton}"
                    Width="100" 
                    Height="45"
                    FontSize="15"
                    Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>