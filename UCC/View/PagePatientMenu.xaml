<Page x:Class="UCC.View.PagePatientMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель пациента"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="{StaticResource PrimaryBrush}" Padding="20">
            <TextBlock Text="Единая Цифровая Картотека (ЕЦК)"
                       Foreground="White" 
                       FontFamily="{StaticResource ComfortaaFont}"
                       FontSize="22" FontWeight="Bold"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="30,20">
            <StackPanel>
                <TextBlock Text="Панель пациента"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="28" 
                           Margin="0,0,0,25"/>

                <Button Content="Моя карта пациента" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Background="#48BB78"
                        Foreground="White"
                        Click="BtnMyCard_Click"/>

                <Button Content="История болезней" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnHistory_Click"/>

                <Button Content="Рецепты" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnPrescriptions_Click"/>

                <Button Content="Направления" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnReferrals_Click"/>

                <Button Content="Анализы" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnLabTests_Click"/>

                <TextBlock Text="Дополнительно"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="18" 
                           Margin="0,25,0,15"/>

                <Button Content="Скачать карту (PDF)" 
                        Style="{StaticResource RoundedButton}"
                        Width="220" 
                        Height="50" 
                        FontSize="16"
                        Click="BtnDownloadPdf_Click"/>

                <Button Content="Выход" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Background="#E53E3E"
                        Foreground="White"
                        Click="BtnLogout_Click"
                        Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>