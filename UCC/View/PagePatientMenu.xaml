<Page x:Class="UCC.View.PagePatientMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель пациента">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#2C5282" Padding="20">
            <TextBlock Text="Единая Цифровая Картотека (ЕЦК)"
                       Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <TextBlock Text="Панель пациента"
                           FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <Button Content="Моя карта пациента" Height="40" Margin="0,0,0,10" 
                        Background="#48BB78" Foreground="White" Click="BtnMyCard_Click"/>
                <Button Content="История болезней" Height="40" Margin="0,0,0,10" Click="BtnHistory_Click"/>
                <Button Content="Рецепты" Height="40" Margin="0,0,0,10" Click="BtnPrescriptions_Click"/>
                <Button Content="Направления" Height="40" Margin="0,0,0,10" Click="BtnReferrals_Click"/>
                <Button Content="Анализы" Height="40" Margin="0,0,0,10" Click="BtnLabTests_Click"/>

                <TextBlock Text="Дополнительно"
                           FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <Button Content="Скачать карту (PDF)" Width="160" 
        Click="BtnDownloadPdf_Click" Margin="0,0,10,0"/>
                <Button Content="Запись к врачу" Height="40" Margin="0,0,0,10" Click="BtnAppointment_Click"/>
                <Button Content="Мой профиль" Height="40" Margin="0,0,0,10" Click="BtnProfile_Click"/>

                <Button Content="Выход" Height="40" Margin="0,30,0,0" 
                        Background="#E53E3E" Foreground="White" Click="BtnLogout_Click"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>