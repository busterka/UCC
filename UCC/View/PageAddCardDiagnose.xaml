<Page x:Class="UCC.View.PageAddCardDiagnose"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Добавление данных в карту"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Новый приём пациента" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="24" 
                   Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Пациент -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Пациент:" 
                       Style="{StaticResource TextStyle}" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       Margin="0,0,15,0"
                       FontSize="16"/>
            <TextBlock x:Name="TxtPatientName" 
                       Style="{StaticResource TextStyle}"
                       FontSize="16"
                       Text="— не выбран —"/>
        </StackPanel>

        <!-- Диагноз -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Диагноз (МКБ-10):" 
                           Style="{StaticResource TextStyle}" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"
                           FontSize="16"/>
                <TextBox x:Name="TxtDiagnosis" 
                         Style="{StaticResource CustomTextBox}"
                         Text="Например: I10 – Гипертония" 
                         Height="40" 
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Жалобы -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Жалобы пациента:" 
                           Style="{StaticResource TextStyle}" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"
                           FontSize="16"/>
                <TextBox x:Name="TxtComplaints" 
                         Style="{StaticResource CustomTextBox}"
                         AcceptsReturn="True" 
                         Height="100" 
                         TextWrapping="Wrap"
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Осмотр -->
        <Border Grid.Row="4" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Осмотр / Симптомы:" 
                           Style="{StaticResource TextStyle}" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"
                           FontSize="16"/>
                <TextBox x:Name="TxtExamination" 
                         Style="{StaticResource CustomTextBox}"
                         AcceptsReturn="True" 
                         Height="100" 
                         TextWrapping="Wrap"
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Назначения -->
        <Border Grid.Row="5" 
                Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Назначения и рекомендации:" 
                           Style="{StaticResource TextStyle}" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"
                           FontSize="16"/>
                <TextBox x:Name="TxtPrescriptions" 
                         Style="{StaticResource CustomTextBox}"
                         AcceptsReturn="True" 
                         Height="100" 
                         TextWrapping="Wrap"
                         FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Доп. действия -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,0,0,25">
            <Button Content="Выдать рецепт" 
                    Style="{StaticResource RoundedButton}"
                    Width="140" 
                    Height="45"
                    FontSize="14"
                    Click="BtnAddPrescription_Click"/>
            <Button Content="Выдать направление" 
                    Style="{StaticResource RoundedButton}"
                    Width="160" 
                    Height="45"
                    FontSize="14"
                    Click="BtnAddReferral_Click"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="8">
            <Button Content="Отмена" 
                    Style="{StaticResource RoundedButton}"
                    Width="120" 
                    Height="45"
                    FontSize="14"
                    Click="BtnCancel_Click"/>
            <Button Content="Сохранить и завершить" 
                    Style="{StaticResource RoundedButton}"
                    Width="200" 
                    Height="45"
                    FontSize="14"
                    Click="BtnSaveAndFinish_Click"/>
        </StackPanel>

    </Grid>
</Page>