<Page x:Class="UCC.View.PageDoctorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель врача"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="{StaticResource PrimaryBrush}" Padding="20">
            <TextBlock Text="Единая Цифровая Картотека (ЕЦК)"
                       Foreground="White" 
                       FontFamily="{StaticResource ComfortaaFont}"
                       FontSize="22" FontWeight="Bold"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="30,20">
            <StackPanel>
                <TextBlock Text="Панель врача"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="28" 
                           Margin="0,0,0,25"/>

                <TextBlock Text="Работа с пациентами"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="18" 
                           Margin="0,0,0,15"/>

                <Button Content="Новый приём / Диагноз" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Background="#48BB78"
                        Foreground="White"
                        Click="BtnNewDiagnosis_Click"/>

                <Button Content="Поиск пациента" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnSearchPatient_Click"/>

                <TextBlock Text="Справочники"
                           Style="{StaticResource HeaderStyle}"
                           FontSize="18" 
                           Margin="0,25,0,15"/>

                <Button Content="Справочник болезней" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnDiagnoses_Click"/>

                <Button Content="Справочник лекарств" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Click="BtnMedications_Click"/>

                <Button Content="Выход" 
                        Style="{StaticResource RoundedButton}"
                        Height="50" 
                        FontSize="16"
                        Background="#E53E3E"
                        Foreground="White"
                        Click="BtnLogout_Click"
                        Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>