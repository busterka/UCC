<Page x:Class="UCC.View.PageDoctorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель врача">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#2C5282" Padding="20">
            <TextBlock Text="Единая Цифровая Картотека (ЕЦК)"
                       Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <TextBlock Text="Панель врача"
                           FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Работа с пациентами"
                           FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content="Новый приём / Диагноз" Height="40" Margin="0,0,0,10" 
                        Background="#48BB78" Foreground="White" Click="BtnNewDiagnosis_Click"/>
                <Button Content="Поиск пациента" Height="40" Margin="0,0,0,10" Click="BtnSearchPatient_Click"/>
                <Button Content="Выдать направление" Height="40" Margin="0,0,0,10" Click="BtnReferral_Click"/>
                <Button Content="Назначить анализ" Height="40" Margin="0,0,0,10" Click="BtnLabTest_Click"/>

                <TextBlock Text="Справочники"
                           FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <Button Content="Справочник болезней" Height="40" Margin="0,0,0,10" Click="BtnDiagnoses_Click"/>
                <Button Content="Справочник лекарств" Height="40" Margin="0,0,0,10" Click="BtnMedications_Click"/>

                <Button Content="Выход" Height="40" Margin="0,30,0,0" 
                        Background="#E53E3E" Foreground="White" Click="BtnLogout_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>