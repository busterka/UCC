<Window x:Class="UCC.View.WindowMedicalDictionary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Медицинские справочники" 
        Height="650" Width="950"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Медицинские справочники" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="24" 
                   Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Табы -->
        <TabControl x:Name="TabControl" 
                    Grid.Row="1"
                    FontFamily="{StaticResource ComfortaaFont}"
                    FontSize="14">

            <!-- Лекарства -->
            <TabItem Header="Лекарства">
                <Border Background="White" 
                        BorderBrush="{StaticResource PrimaryBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="10">
                    <DataGrid x:Name="DgMedications" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              FontFamily="{StaticResource ComfortaaFont}"
                              FontSize="14"
                              RowHeight="35">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding MedicationId}" 
                                                Width="70"
                                                FontWeight="Bold"/>
                            <DataGridTextColumn Header="Название препарата" 
                                                Binding="{Binding MedicationName}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Дозировка" 
                                                Binding="{Binding StandardDosage}" 
                                                Width="130"/>
                            <DataGridTextColumn Header="Инструкция" 
                                                Binding="{Binding GeneralInstructions}" 
                                                Width="2*"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontFamily" Value="{StaticResource ComfortaaFont}"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,8"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Участки -->
            <TabItem Header="Участки">
                <Border Background="White" 
                        BorderBrush="{StaticResource PrimaryBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="10">
                    <DataGrid x:Name="DgDepartments" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              FontFamily="{StaticResource ComfortaaFont}"
                              FontSize="14"
                              RowHeight="35">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" 
                                                Binding="{Binding DepartmentName}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Кабинет" 
                                                Binding="{Binding Cabinet}" 
                                                Width="160"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontFamily" Value="{StaticResource ComfortaaFont}"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,8"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>