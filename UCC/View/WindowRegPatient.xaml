<Window x:Class="UCC.View.WindowRegPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCC.View"
        mc:Ignorable="d"
        Title="WindowRegPatient" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Регистрация" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="ФИО:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFullName" Height="30"/>

            <TextBlock Text="Дата рождения:" Margin="0,10,0,5"/>
            <DatePicker x:Name="dpBirthDate" Height="30"/>

            <TextBlock Text="Телефон:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtPhone" Height="30"/>

            <TextBlock Text="Email:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtEmail" Height="30"/>

            <TextBlock Text="Пароль:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30"/>

            <Button Content="Зарегистрироваться" 
                    Height="35" Margin="0,20,0,0"
                    Click="BtnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>
