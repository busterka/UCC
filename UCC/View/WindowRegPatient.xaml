<Window x:Class="UCC.View.WindowRegPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация пациента" 
        Height="580" Width="850"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30">
        <StackPanel MaxWidth="500" HorizontalAlignment="Center">
            <TextBlock Text="Регистрация" 
                       Style="{StaticResource HeaderStyle}"
                       FontSize="28" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,25"/>

            <!-- Фото -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,25">
                <Border Background="White" 
                        BorderBrush="{StaticResource PrimaryBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="5">
                    <Image x:Name="ImgPreview" 
                           Width="100" Height="100" 
                           Stretch="UniformToFill"
                           Source="/Images/default-avatar.png"/>
                </Border>
                <Button Content="Выбрать фото" 
                        Style="{StaticResource RoundedButton}"
                        Width="140" 
                        Height="40"
                        FontSize="14"
                        Margin="20,0,0,0"
                        Click="BtnSelectPhoto_Click"/>
            </StackPanel>

            <!-- ФИО -->
            <Border Background="White" 
                    BorderBrush="{StaticResource PrimaryBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ФИО:" 
                               Style="{StaticResource TextStyle}"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="txtFullName" 
                             Style="{StaticResource CustomTextBox}"
                             Height="35"
                             FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Дата рождения -->
            <Border Background="White" 
                    BorderBrush="{StaticResource PrimaryBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Дата рождения:" 
                               Style="{StaticResource TextStyle}"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,6"/>
                    <DatePicker x:Name="dpBirthDate" 
                                Style="{StaticResource CustomDatePicker}"
                                Height="35"
                                FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Телефон -->
            <Border Background="White" 
                    BorderBrush="{StaticResource PrimaryBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Телефон:" 
                               Style="{StaticResource TextStyle}"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="txtPhone" 
                             Style="{StaticResource CustomTextBox}"
                             Height="35"
                             FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Email -->
            <Border Background="White" 
                    BorderBrush="{StaticResource PrimaryBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Email:" 
                               Style="{StaticResource TextStyle}"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="txtEmail" 
                             Style="{StaticResource CustomTextBox}"
                             Height="35"
                             FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Пароль -->
            <Border Background="White" 
                    BorderBrush="{StaticResource PrimaryBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Пароль:" 
                               Style="{StaticResource TextStyle}"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Style="{StaticResource CustomPasswordBox}"
                                 Height="35"
                                 FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Кнопка регистрации -->
            <Button Content="Зарегистрироваться" 
                    Style="{StaticResource RoundedButton}"
                    Height="50" 
                    FontSize="16"
                    Click="BtnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>