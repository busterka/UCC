<Window x:Class="UCC.View.WindowDiagnosisEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование диагноза" 
        Height="320" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Код МКБ-10 -->
        <Border Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Код МКБ-10" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="TxtCode" 
                         Style="{StaticResource CustomTextBox}"
                         Height="35"
                         FontSize="14"
                         Text=""
                         ToolTip="Код МКБ-10 (например, I10)"/>
            </StackPanel>
        </Border>

        <!-- Название -->
        <Border Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Grid.Row="1"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Название заболевания" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="TxtName" 
                         Style="{StaticResource CustomTextBox}"
                         Height="35"
                         FontSize="14"
                         Text=""
                         ToolTip="Название заболевания"/>
            </StackPanel>
        </Border>

        <!-- Описание -->
        <Border Background="White" 
                BorderBrush="{StaticResource PrimaryBrush}" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="12"
                Grid.Row="2"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Описание" 
                           Style="{StaticResource TextStyle}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="TxtDescription" 
                         Style="{StaticResource CustomTextBox}"
                         Height="80"
                         AcceptsReturn="True" 
                         TextWrapping="Wrap"
                         FontSize="14"
                         Text=""
                         ToolTip="Описание (необязательно)"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Grid.Row="3" 
                    Margin="0,15,0,0">
            <Button Content="Отмена" 
                    Style="{StaticResource RoundedButton}"
                    Width="100" 
                    Height="45"
                    FontSize="15"
                    IsCancel="True" 
                    Margin="0,0,15,0"/>
            <Button Content="Сохранить" 
                    Style="{StaticResource RoundedButton}"
                    Width="120" 
                    Height="45"
                    FontSize="15"
                    IsDefault="True" 
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>